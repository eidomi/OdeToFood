@page "{resturantId:int}"
@model OdeToFood.Pages.Resturants.DetailModel
@{
    ViewData["Title"] = "Detail";
}

<h2>@Model.Resturant.Name</h2>
@if (Model.Message != null)
{
    <div class="alert alert-info">@Model.Message.</div>
}
<div>
    Id: @Model.Resturant.Name
</div>
<div>
    Location: @Model.Resturant.Location
</div>
<div>
    Location: @Model.Resturant.Cuisine
</div>

<a asp-page="./List" class="btn btn-dark">All Resturants</a>